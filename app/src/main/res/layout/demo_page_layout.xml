<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.yizhibopage.page.impletment.SimplePageParent
        android:id="@+id/level0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#988744"
        android:tag="0">

        <com.example.page.demo.PlayerPage
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.example.yizhibopage.page.impletment.SimplePageParent>


    <com.example.yizhibopage.page.impletment.SimplePageParent
        android:id="@+id/level1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center_horizontal"
            android:paddingTop="100dp"
            android:text="I am Level1"
            android:textColor="#F06680"
            android:textSize="30sp" />

    </com.example.yizhibopage.page.impletment.SimplePageParent>


    <com.example.yizhibopage.page.impletment.SimplePageParent
        android:id="@+id/level2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center_horizontal"
            android:paddingTop="200dp"
            android:text="I am Level2"
            android:textColor="#F06680"
            android:textSize="30sp" />
    </com.example.yizhibopage.page.impletment.SimplePageParent>

    <com.example.yizhibopage.page.impletment.SimplePageParent
        android:id="@+id/level3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center_horizontal"
            android:paddingTop="300dp"
            android:text="I am Level3"
            android:textColor="#F06680"
            android:textSize="30sp" />

    </com.example.yizhibopage.page.impletment.SimplePageParent>


</merge>